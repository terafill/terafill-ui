{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:import/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "import"
    ],
    "rules": {
        "import/order": [
              "error",
              {
                "groups": ["builtin", "external", "internal"],
                "pathGroups": [
                  {
                    "pattern": "react",
                    "group": "external",
                    "position": "before"
                  }
                ],
                "pathGroupsExcludedImportTypes": ["react"],
                "newlines-between": "always",
                "alphabetize": {
                  "order": "asc",
                  "caseInsensitive": true
                }
              }
            ]
    }
}
